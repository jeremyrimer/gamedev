{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with MinGW-w64",
            "type": "shell",
            "command": "mingw32-make",
            "args": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": ["$gcc"],
            "detail": "Run mingw32-make in the build directory"
        },
        {
            "label": "CMake Generate",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G",
                "MinGW Makefiles",
                ".."
            ],
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": [],
            "detail": "Generate Makefile with CMake"
        }
    ]
}